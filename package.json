{
  "name": "@flowershow/markdowndb",
  "version": "0.1.2",
  "description": "Parse markdown files and store them in an SQL database.",
  "bin": {
    "mddb": "./src/bin/index.js"
  },
  "scripts": {
    "format:check": "prettier --check \"**/*.{js,ts}\"",
    "format:write": "prettier --write \"**/*.{js,ts}\"",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "build": "tsc --p tsconfig.lib.json",
    "postbuild": "cp package.json dist/package.json && cp README.md dist/README.md && cp LICENSE dist/LICENSE && cd dist && npm pkg delete scripts.prepare",
    "prepare": "husky install",
    "changeset": "changeset",
    "release": "changeset version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/datopian/markdowndb.git"
  },
  "keywords": ["markdown", "database", "content", "obsidian"],
  "author": "Rufus Pollock",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/datopian/markdowndb/issues"
  },
  "homepage": "https://github.com/datopian/markdowndb",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "dependencies": {
    "@flowershow/remark-wiki-link": "^1.1.2",
    "gray-matter": "^4.0.3",
    "knex": "^2.4.2",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "sqlite3": "^5.1.6",
    "unist-util-select": "^4.0.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
